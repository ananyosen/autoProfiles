<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strwhite"
                android:id="@+id/buttonWhite" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp" android:layout_marginBottom="108dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strblack"
                android:id="@+id/buttonBlack" android:layout_alignBottom="@+id/buttonWhite"
                android:layout_alignParentRight="true" android:layout_marginRight="45dp"/>
</RelativeLayout>

